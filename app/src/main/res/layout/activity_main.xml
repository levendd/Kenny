<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#512700"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Time : 15"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Score : 0"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textTime"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/textTime"
        app:layout_constraintTop_toBottomOf="@+id/textTime" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="361dp"
        android:layout_height="361dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textScore">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="upScore"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/mole" />
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="upScore"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/mole" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="upScore"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/mole" />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="upScore"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/mole" />
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="upScore"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/mole" />
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="upScore"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/mole" />
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="upScore"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/mole" />
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="120dp"
            android:layout_height="120dp" android:onClick="upScore"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/mole" />
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="upScore"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/mole" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>